{
    "env": {
        "node": true,
        "mocha": true
    },
    "globals": { // I don't know, why mocha environment doesn't load this variables as global
        "describe": true,
        "it": true,
        "mocha": true
    },
    "rules": {
        // Require strings to use single quotes
        "quotes": [
            2,
            "single"
        ],
        // Require curly braces for all control statements
        "curly": 2,
        // Allow leading underscores for method names
        // REASON: we use underscores to denote private methods
        "no-underscore-dangle": 0
    }
}
